      "file": "examples/contact-form.txt"
    },
    {
      "name": "Blog Listing",
      "file": "examples/blog.txt"
    },
    {
      "name": "Accessibility Statement",
      "file": "examples/accessibility-statement.txt"
    },
    {
      "name": "Wireframe Editor",
      "file": "examples/editor.txt"
    }
  ],
  "references": [
    {
      "title": "Improving Wireframe Accessibility: A more inclusive Design process",
